
<div class="col-md-5">
  <table class="table table-bordered table-hover">
    <thead>
      <tr>
        <th>Title</th>
        <th></th>
      </tr>
    </thead>
    <% @pages.each do |page| %>

      <tr>
        <td><%= page.title %></td>
        <td>
          <%= link_to 'Edit', edit_admin_page_path(page) %> | 
          <%= link_to 'Show', admin_page_path(page) %> | 
          <%= link_to 'Public View', page_path(page)%> |
          <%= link_to 'Delete', admin_page_path(page), :method => :delete, :confirm => "Are you sure?" %>
        </td>
      </tr>
    <% end %>
  </table>
</div>
